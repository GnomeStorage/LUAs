-- Delta Executor Compatible: Simple Enlarge Pets Script

local scale = 3  -- Scaling factor for enlarging the pets

-- Look for pets in the workspace or player's character
local petFolder = workspace:FindFirstChild("Pets") or game.Players.LocalPlayer.Character:FindFirstChild("Pets") or game.Players.LocalPlayer.Character

if not petFolder then
    print("No pets found in workspace or character.")
    return
end

-- Iterate over each pet model and scale its parts
for _, model in ipairs(petFolder:GetChildren()) do
    if model:IsA("Model") then
        -- Ensure the model has a PrimaryPart for proper scaling
        if model.PrimaryPart then
            -- Scale each part within the model
            for _, part in ipairs(model:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.Size = part.Size * scale
                    -- Ensure position is updated as well to prevent clipping
                    part.Position = part.Position * 1.1  -- Move slightly to avoid overlap
                elseif part:IsA("SpecialMesh") then
                    part.Scale = part.Scale * scale
                end
            end
            -- Optionally, update the PrimaryPart's CFrame for the model
            model:SetPrimaryPartCFrame(model.PrimaryPart.CFrame)
        else
            warn("Pet model doesn't have a PrimaryPart.")
        end
    end
end
