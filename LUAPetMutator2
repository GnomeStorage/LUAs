-- Create GUI
local ScreenGui = Instance.new("ScreenGui", game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "PetMutatorUI"
ScreenGui.ResetOnSpawn = false

-- Drag Frame
local DragFrame = Instance.new("Frame", ScreenGui)
DragFrame.Size = UDim2.new(0, 300, 0, 40)
DragFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
DragFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
DragFrame.Active = true
DragFrame.Draggable = true

-- Title
local Title = Instance.new("TextLabel", DragFrame)
Title.Size = UDim2.new(1, 0, 1, 0)
Title.Text = "Bacon Scripts\nPET MUTATOR"
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundTransparency = 1

-- Mutation Dropdown (input)
local MutationDropdown = Instance.new("TextBox", ScreenGui)
MutationDropdown.Size = UDim2.new(0, 300, 0, 30)
MutationDropdown.Position = UDim2.new(0.3, 0, 0.3, 45)
MutationDropdown.PlaceholderText = "Type mutation (e.g. Golden)"
MutationDropdown.Text = ""
MutationDropdown.Font = Enum.Font.SourceSans
MutationDropdown.TextSize = 18
MutationDropdown.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
MutationDropdown.TextColor3 = Color3.new(1, 1, 1)

-- Mutate Button
local MutateButton = Instance.new("TextButton", ScreenGui)
MutateButton.Size = UDim2.new(0, 300, 0, 30)
MutateButton.Position = UDim2.new(0.3, 0, 0.3, 80)
MutateButton.Text = "Click to Mutate Pet"
MutateButton.Font = Enum.Font.SourceSansBold
MutateButton.TextSize = 18
MutateButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
MutateButton.TextColor3 = Color3.new(1, 1, 1)

-- Status Label
local StatusLabel = Instance.new("TextLabel", ScreenGui)
StatusLabel.Size = UDim2.new(0, 300, 0, 25)
StatusLabel.Position = UDim2.new(0.3, 0, 0.3, 115)
StatusLabel.Text = "Status: Ready"
StatusLabel.Font = Enum.Font.SourceSans
StatusLabel.TextSize = 16
StatusLabel.BackgroundTransparency = 1
StatusLabel.TextColor3 = Color3.new(1, 1, 1)

-- Pet Info
local PetInfo = Instance.new("TextLabel", ScreenGui)
PetInfo.Size = UDim2.new(0, 300, 0, 40)
PetInfo.Position = UDim2.new(0.3, 0, 0.3, 145)
PetInfo.Text = "Pet Info: N/A"
PetInfo.Font = Enum.Font.SourceSans
PetInfo.TextSize = 16
PetInfo.BackgroundTransparency = 1
PetInfo.TextColor3 = Color3.new(1, 1, 1)

-- Mutation Effect Display
local EffectLabel = Instance.new("TextLabel", ScreenGui)
EffectLabel.Size = UDim2.new(0, 300, 0, 40)
EffectLabel.Position = UDim2.new(0.3, 0, 0.3, 185)
EffectLabel.Text = "Effect: N/A"
EffectLabel.Font = Enum.Font.SourceSans
EffectLabel.TextSize = 16
EffectLabel.BackgroundTransparency = 1
EffectLabel.TextColor3 = Color3.new(1, 1, 1)

-- Mutation Data
local mutationMap = {
	Golden = {Prefix = "Golden ", Color = Color3.fromRGB(255, 215, 0), Effect = "+10% Passive Boost & Reduced Cooldown"},
	Shiny = {Prefix = "Shiny ", Color = Color3.fromRGB(173, 216, 230), Effect = "+30% XP/sec"},
	Rainbow = {Prefix = "Rainbow ", Color = Color3.fromRGB(255, 0, 255), Effect = "+20% Passive Boost & Reduced Cooldown"},
	Mega = {Prefix = "Mega ", Color = Color3.fromRGB(255, 150, 100), Effect = "Huge Size, +10–40 XP/sec"},
	Tiny = {Prefix = "Tiny ", Color = Color3.fromRGB(180, 180, 180), Effect = "Tiny Size, +5–30 XP/sec"},
	Tranquil = {Prefix = "Tranquil ", Color = Color3.fromRGB(102, 204, 255), Effect = "Nearby fruits may find peace every ~25 min"},
	Corrupted = {Prefix = "Corrupted ", Color = Color3.fromRGB(75, 0, 130), Effect = "Nearby fruits may corrupt every ~25 min"},
	Inverted = {Prefix = "Inverted ", Color = Color3.fromRGB(255, 255, 255), Effect = "+50% XP/sec"},
	Frozen = {Prefix = "Frozen ", Color = Color3.fromRGB(140, 220, 255), Effect = "~20-30% chance to freeze fruit every ~5 min"},
	Windy = {Prefix = "Windy ", Color = Color3.fromRGB(210, 255, 255), Effect = "~20-30% chance of windstruck fruit every 0.5–5 min"},
	IronSkin = {Prefix = "IronSkin ", Color = Color3.fromRGB(200, 200, 200), Effect = "35–45% chance to recover stolen fruit"},
	Radiant = {Prefix = "Radiant ", Color = Color3.fromRGB(255, 255, 153), Effect = "Boosts plant growth by 24 hrs every ~20–30 min"},
	Shocked = {Prefix = "Shocked ", Color = Color3.fromRGB(255, 255, 102), Effect = "Can shock fruit during thunder every ~45–60s"},
	Ascended = {Prefix = "Ascended ", Color = Color3.fromRGB(255, 240, 200), Effect = "Random fruit gains Dawnbound every 5–6 hours"}
}

-- Get held pet (must contain "PetTag")
local function getHeldPet()
	local char = game.Players.LocalPlayer.Character
	if not char then return nil end
	for _, child in pairs(char:GetChildren()) do
		if child:IsA("Model") and child:FindFirstChild("PetTag") then
			return child
		end
	end
	return nil
end

-- Update info
local function updatePetInfo(pet)
	if not pet then
		PetInfo.Text = "Pet Info: None"
	else
		local weight = pet:GetAttribute("Weight") or "?"
		local age = pet:GetAttribute("Age") or "?"
		PetInfo.Text = pet.Name .. "\n[" .. tostring(weight) .. " KG] [Age " .. tostring(age) .. "]"
	end
end

-- Mutate
MutateButton.MouseButton1Click:Connect(function()
	local pet = getHeldPet()
	if not pet then
		StatusLabel.Text = "Status: No pet held!"
		return
	end

	local mut = MutationDropdown.Text
	local data = mutationMap[mut]
	if not data then
		StatusLabel.Text = "Status: Invalid mutation!"
		EffectLabel.Text = "Effect: Unknown"
		return
	end

	pet.Name = data.Prefix .. (pet.Name:gsub("^%w+ ", ""))

	for _, part in ipairs(pet:GetDescendants()) do
		if part:IsA("BasePart") then
			part.Color = data.Color
			part.Material = Enum.Material.Metal
		end
	end

	StatusLabel.Text = "Status: Applied " .. mut
	EffectLabel.Text = "Effect: " .. data.Effect
	updatePetInfo(pet)
end)

-- Auto-update info
task.wait(1)
local heldPet = getHeldPet()
updatePetInfo(heldPet)
