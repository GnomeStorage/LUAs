-- Fake loading effect on FreezeTrade
local isLoading = false
FreezeTrade.MouseButton1Click:Connect(function()
    if isLoading then return end
    isLoading = true
    local originalText = FreezeTrade.Text
    FreezeTrade.Text = "‚ùÑÔ∏è FREEZING."
    for i = 1, 3 do
        wait(0.4)
        FreezeTrade.Text = "‚ùÑÔ∏è FREEZING" .. string.rep(".", i)
    end
    wait(0.5)
    FreezeTrade.Text = "‚ùÑÔ∏è FROZEN ‚úÖ"
    wait(1)
    FreezeTrade.Text = originalText
    isLoading = false
end)

-- Fake click on ForceAccept
ForceAccept.MouseButton1Click:Connect(function()
    ForceAccept.Text = "‚úÖ TRADE ACCEPTED"
    wait(1)
    ForceAccept.Text = "üîÑ FORCE ACCEPT"
end)

-- Dragging for PC + Mobile
local function dragify(frame)
	local UIS = game:GetService("UserInputService")
	local dragging = false
	local dragInput, dragStart, startPos

	frame.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
			dragging = true
			dragStart = input.Position
			startPos = frame.Position

			input.Changed:Connect(function()
				if input.UserInputState == Enum.UserInputState.End then
					dragging = false
				end
			end)
		end
	end)

	frame.InputChanged:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
			dragInput = input
		end
	end)

	game:GetService("UserInputService").InputChanged:Connect(function(input)
		if input == dragInput and dragging then
			local delta = input.Position - dragStart
			frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
		end
	end)
end

dragify(MainFrame)
