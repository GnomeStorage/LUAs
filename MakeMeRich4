-- Check if the script is running in a valid executor environment
if not game:IsLoaded() then
    game.Loaded:Wait()
end

-- Ensure the player and GUI elements exist
local player = game.Players.LocalPlayer
local screenGui = player.PlayerGui:WaitForChild("ScreenGui")  -- Make sure you have a ScreenGui
local moneyLabel = screenGui:WaitForChild("MoneyLabel")  -- Replace with the actual path of your MoneyLabel

-- Function to add money visually
local function addMoney()
    -- Fetch the current money displayed on the label
    local currentMoney = tonumber(moneyLabel.Text:match("([%,0-9]+)")) or 0
    -- Add 1 quadrillion (1,000,000,000,000,000)
    local newMoney = currentMoney + 1000000000000000

    -- Update the TextLabel with the new value (formatted with commas for readability)
    moneyLabel.Text = string.format("%0.0f", newMoney):gsub("(%d)(%d%d%d)", "%1,%2") .. "Â¢"
end

-- Create the button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 50)
button.Position = UDim2.new(0.5, -100, 0.8, 0)
button.Text = "MAKE ME RICH"
button.Parent = screenGui  -- Make sure the button is a child of ScreenGui

-- When the button is clicked, call the addMoney function
button.MouseButton1Click:Connect(addMoney)
