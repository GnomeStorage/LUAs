-- Ensure the UI elements exist
local player = game.Players.LocalPlayer
local playerGui = player.PlayerGui

-- Create ScreenGui if it doesn't exist
local screenGui = playerGui:FindFirstChild("ScreenGui")
if not screenGui then
    screenGui = Instance.new("ScreenGui")
    screenGui.Name = "ScreenGui"
    screenGui.Parent = playerGui
end

-- Create MoneyLabel if it doesn't exist
local moneyLabel = screenGui:FindFirstChild("MoneyLabel")
if not moneyLabel then
    moneyLabel = Instance.new("TextLabel")
    moneyLabel.Name = "MoneyLabel"
    moneyLabel.Size = UDim2.new(0, 200, 0, 50)
    moneyLabel.Position = UDim2.new(0.5, -100, 0.2, 0)  -- Position it at the top center
    moneyLabel.Text = "0¢"  -- Initial value of money
    moneyLabel.TextScaled = true
    moneyLabel.Parent = screenGui
end

-- Function to add money (shekels) visually
local function addMoney()
    -- Get the current value from the displayed label and add 1 quadrillion (1,000,000,000,000,000)
    local currentMoney = tonumber(moneyLabel.Text:match("([%,0-9]+)")) or 0
    local newMoney = currentMoney + 1000000000000000

    -- Update the TextLabel with the new value (formatted with commas for readability)
    moneyLabel.Text = string.format("%0.0f", newMoney):gsub("(%d)(%d%d%d)", "%1,%2") .. "¢"
end

-- Create the button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 50)
button.Position = UDim2.new(0.5, -100, 0.8, 0)  -- Position it at the bottom center
button.Text = "MAKE ME RICH"
button.TextScaled = true
button.Parent = screenGui  -- Make sure the button is a child of ScreenGui

-- Adjust button appearance for mobile devices (scale and touch-friendly)
button.AutoButtonColor = true
button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.TextButton1Click:Connect(addMoney)

-- Mobile-friendly input: Allow clicks/taps
button.MouseButton1Click:Connect(function()
    addMoney()
end)
