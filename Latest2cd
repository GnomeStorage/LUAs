    ["Enchanted Egg"] = { "Ladybug", "Pixie", "Imp", "Glimmering Sprite", "Cockatrice" },
}

-- Helper function to find egg type from pet name
local function findEggTypeByPet(petName)
    for eggType, pets in pairs(petTable) do
        for _, pet in ipairs(pets) do
            if pet == petName then
                return eggType
            end
        end
    end
    return "Unknown Egg"
end

